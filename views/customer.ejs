<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title></title>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            <%= title %>
        </h1>

        <% if(action=='add' ) { %>

            <div class="card">
                <div class="card-header">employee data </div>
                <div class="card-body">
                    <form method="POST" action="/customer/add_customer">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>cus_id</label>
                                    <input type="number" name="cus_id" id="cus_id" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>empid</label>
                                    <input type="number" name="empid" id="empid" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>cus_firstname</label>
                                    <input type="text" name="cus_firstname" id="cus_firstname" class="form-control"
                                        required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>cus_lasttname</label>
                                    <input type="text" name="cus_lasttname" id="cus_lasttname" class="form-control"
                                        required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>email</label>
                                    <input type="email" name="email" id="email" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>phone</label>
                                    <input type="text" name="phone" id="phone" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>c_id</label>
                                    <input type="number" name="c_id" id="c_id" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>country</label>
                                    <input type="text" name="country" id="country" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>city</label>
                                    <input type="text" name="city" id="city" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>street_name</label>
                                    <input type="text" name="street_name" id="street_name" class="form-control"
                                        required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>postal_code</label>
                                    <input type="number" name="postal_code" id="postal_code" class="form-control"
                                        required />

                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" required />
                        </div>
                    </form>
                </div>
            </div>




            <% } else { %>
                <% if(message.length> 0) { %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                    <% } %>
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col">customer data</div>
                                    <div class="col">
                                        <a href="/customer/add" class="btn btn-success btn-sm float-end">Add</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>cus_id</th>
                                            <th>empid</th>
                                            <th>cus_firstname</th>
                                            <th>cus_lasttname</th>
                                            <th>email</th>
                                            <th>cus_id</th>
                                            <th>phone</th>
                                            <th>c_id</th>
                                            <th>country</th>
                                            <th>city</th>
                                            <th>street_name</th>
                                            <th>postal_code</th>
                                            <th>action</th>
                                        </tr>
                                        <% if(customer.length> 0)
                                            {
                                            customer.forEach(function(data){
                                            %>
                                            <tr>
                                                <td>
                                                    <%= data.cus_id %>
                                                  </td>
                                                  <td>
                                                    <%= data.empid %>
                                                  </td>
                                                  <td>
                                                    <%= data.cus_firstname %>
                                                  </td>
                                                  <td>
                                                    <%= data.cus_lasttname %>
                                                  </td>
                                                  <td>
                                                    <%= data.email %>
                                                  </td>
                                                  <td>
                                                    <%= data.cus_id %>
                                                  </td>
                                                  <td>
                                                    <%= data.phone %>
                                                  </td>
                                                  <td>
                                                    <%= data.c_id %>
                                                  </td>
                                                  <td>
                                                    <%= data.country %>
                                                  </td>
                                                  <td>
                                                    <%= data.city %>
                                                  </td>
                                                  <td>
                                                    <%= data.street_name %>
                                                  </td>
                                                  <td>
                                                    <%= data.postal_code %>
                                                  </td>
                                                <td>
                                                    <a href="/customer/delete/<%= data.cus_id && data.cus_id && data.c_id %>"
                                                        class="btn btn-primary btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                            <% }); } else { %>
                                                <tr>
                                                    <td colspan="5">No Data Found</td>
                                                </tr>
                                                <% } %>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>