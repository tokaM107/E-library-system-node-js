<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title></title>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            <%= title %>
        </h1>

        <% if(action=='add' ) { %>

            <div class="card">
                <div class="card-header">employee data </div>
                <div class="card-body">
                    <form method="POST" action="/publisher/add_publisher">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>pub_id</label>
                                    <input type="number" name="pub_id" id="pub_id" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>pub_name</label>
                                    <input type="text" name="pub_name" id="pub_name" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>book_id</label>
                                    <input type="text" name="book_id" id="book_id" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>pub_date</label>
                                    <input type="date" name="pub_date" id="pub_date" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>country</label>
                                    <input type="text" name="country" id="country" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>city</label>
                                    <input type="text" name="city" id="city" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>region</label>
                                    <input type="text" name="region" id="region" class="form-control" required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>street_name</label>
                                    <input type="text" name="street_name" id="street_name" class="form-control"
                                        required />

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>postal_code</label>
                                    <input type="number" name="postal_code" id="postal_code" class="form-control"
                                        required />

                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" required />
                        </div>
                    </form>
                </div>
            </div>




            <% } else { %>
                <% if(message.length> 0) { %>
                    <div class="alert alert-success">
                        <%= message %>
                    </div>
                    <% } %>
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col">publisher data</div>
                                    <div class="col">
                                        <a href="/publisher/add" class="btn btn-success btn-sm float-end">Add</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th>pub_id</th>
                                            <th>pub_name</th>
                                            <th>pub_ID</th>
                                            <th>country</th>
                                            <th>city</th>
                                            <th>region</th>
                                            <th>street_name</th>
                                            <th>postal_code</th>
                                            <th>book_id</th>
                                            <th>pubID</th>
                                            <th>pub_date</th>
                                            <th>action</th>
                                        </tr>
                                        <% if(publisher.length> 0)
                                            {
                                            publisher.forEach(function(data){
                                            %>
                                            <tr>
                                                <td>
                                                    <%= data.pub_id %>
                                                </td>
                                                <td>
                                                    <%= data.pub_name %>
                                                </td>
                                                <td>
                                                    <%= data.pub_ID %>
                                                </td>
                                                <td>
                                                    <%= data.country %>
                                                </td>
                                                <td>
                                                    <%= data.city %>
                                                </td>
                                                <td>
                                                    <%= data.region %>
                                                </td>
                                                <td>
                                                    <%= data.street_name %>
                                                </td>
                                                <td>
                                                    <%= data.postal_code %>
                                                </td>
                                                <td>
                                                    <%= data.book_id %>
                                                </td>
                                                <td>
                                                    <%= data.pubID %>
                                                </td>
                                                <td>
                                                    <%= data.pub_date %>
                                                </td>
                                                <td>
                                                    <a href="/publisher/delete/<%= data.pub_id %>"
                                                        class="btn btn-primary btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                            <% }); } else { %>
                                                <tr>
                                                    <td colspan="5">No Data Found</td>
                                                </tr>
                                                <% } %>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>